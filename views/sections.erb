<section id="content" role="main" class="group ancillary section-page">
  <div class="article-container">
    <header class="page-header group">
  		<hgroup>
  			<h1>Browse GOV.UK</h1>
  		</hgroup>
  	</header>

    <div class="browse-sections">
      <dl>
        <% @results.each do |section| %>
          <dt>
            <a href="<%= section.path %>"><%=h formatted_section_name section.slug %></a>
          </dt>
          <dd>
            <%= include section.slug %>
          </dd>
        <% end %>
      </dl>
    </div>
  </div>
</section>

<% content_for :head do %>
  <link rel="alternate" type="application/json" href="/browse.json">
<% end %>
